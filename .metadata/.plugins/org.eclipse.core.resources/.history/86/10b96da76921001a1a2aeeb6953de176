package Array;

public class Demo4 {
	public static void main(String[] args) {
		int[] arr = {1,2,3,4,5,6,7};
		
	}
	//数组的逆序
	public static void reverse(int[] arr) {
		for(int x = 0; x<arr.length/2;x++) {
			int temp = arr[0];
			arr[x] = arr[arr.length-1-x];
			arr[arr.length-1-x] = temp;
		}
		
	}
}
